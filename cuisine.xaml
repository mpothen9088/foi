<Window x:Class="tiffin.cuisine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Cuisine List" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
            <Button Content="Kerala Cuisine" FontWeight="Bold" FontSize="18" Margin="0,10" Width="759" Click="keralaButton_Click"/>
            <Button Content="Punjabi Cuisine" FontWeight="Bold" FontSize="18" Margin="0,10" Click="punjabButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
